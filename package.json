{
    "name": "node-ts-express-server",
    "version": "1.0.0",
    "description": "Node Express TS Boilerplate",
    "main": "server.js",
    "author": "",
    "license": "ISC",
    "scripts": {
        "start": "npm run serve",
        "clean": "rm -rf dist",
        "build": "npm run build-ts && npm run lint",
        "serve": "node dist/server.js",
        "watch-node": "nodemon dist/server.js",
        "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
        "test": "jest --clearCache && jest --forceExit --coverage --verbose --detectOpenHandles",
        "watch-test": "npm run test -- --watchAll",
        "build-ts": "tsc",
        "watch-ts": "tsc -w",
        "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
        "debug": "npm run build && npm run watch-debug",
        "serve-debug": "nodemon --inspect dist/server.js",
        "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
        "docker-build": "docker build -t udb-api .",
        "docker-run": "docker run --rm -d --network host -it udb-api:latest"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run build",
            "pre-push": "npm test"
        }
    },
    "dependencies": {
        "async": "^3.1.0",
        "axios": "^0.19.2",
        "bluebird": "^3.5.5",
        "body-parser": "^1.19.0",
        "cls-hooked": "^4.2.2",
        "compression": "^1.7.4",
        "connect-mongo": "^3.0.0",
        "continuation-local-storage": "^3.2.1",
        "cookie-parser": "^1.4.5",
        "dotenv": "^8.2.0",
        "errorhandler": "^1.5.1",
        "express": "^4.17.1",
        "express-flash": "0.0.2",
        "express-validator": "^6.2.0",
        "http-status-codes": "^1.4.0",
        "lodash": "^4.17.15",
        "lusca": "^1.6.1",
        "mongoose": "^5.7.5",
        "uuid": "^7.0.2",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@types/async": "^3.0.2",
        "@types/bcrypt-nodejs": "^0.0.30",
        "@types/bluebird": "^3.5.27",
        "@types/body-parser": "^1.17.1",
        "@types/chai": "^4.2.3",
        "@types/cls-hooked": "^4.3.0",
        "@types/compression": "^1.0.1",
        "@types/concurrently": "^4.1.0",
        "@types/connect-mongo": "^3.0.0",
        "@types/continuation-local-storage": "^3.2.2",
        "@types/cookie-parser": "^1.4.2",
        "@types/errorhandler": "^0.0.32",
        "@types/eslint": "^6.1.1",
        "@types/express": "^4.17.1",
        "@types/express-flash": "0.0.1",
        "@types/express-session": "^1.15.14",
        "@types/jest": "^24.0.23",
        "@types/jquery": "^3.3.31",
        "@types/lodash": "^4.14.141",
        "@types/lusca": "^1.6.1",
        "@types/mongoose": "^5.5.18",
        "@types/moxios": "^0.4.9",
        "@types/node": "^12.7.8",
        "@types/nodemailer": "^6.2.1",
        "@types/passport": "^1.0.1",
        "@types/passport-facebook": "^2.1.9",
        "@types/passport-local": "^1.0.33",
        "@types/request": "^2.48.3",
        "@types/request-promise": "^4.1.44",
        "@types/shelljs": "^0.8.5",
        "@types/supertest": "^2.0.8",
        "@types/uuid": "^7.0.2",
        "@types/winston": "^2.4.4",
        "@typescript-eslint/eslint-plugin": "^2.3.1",
        "@typescript-eslint/parser": "^2.3.1",
        "chai": "^4.2.0",
        "concurrently": "^5.0.0",
        "eslint": "^6.8.0",
        "eslint-config-airbnb-base": "^14.1.0",
        "eslint-plugin-import": "^2.20.2",
        "husky": "^4.2.5",
        "jest": "^25.3.0",
        "jest-html-reporters": "^1.2.1",
        "mockingoose": "^2.13.2",
        "moxios": "^0.4.0",
        "nodemon": "^1.19.2",
        "shelljs": "^0.8.3",
        "supertest": "^4.0.2",
        "ts-jest": "^25.2.1",
        "ts-node": "^8.4.1",
        "typescript": "^3.9.2"
    }
}
